{
  "name": "JournalBear",
  "repository": "https://github.com/yrahul3910/journal",
  "description": "Easy-to-use journaling application",
  "author": {
    "name": "Rahul Yedida",
    "email": "yrahul3910@gmail.com"
  },
  "build": {
    "appId": "com.yrahul.journal",
    "linux": {
      "target": [
        "rpm"
      ],
      "icon": "./build/icons",
      "category": "Office"
    },
    "mac": {
      "target": "dir",
      "icon": "./build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "./build/icon.ico"
    }
  },
  "version": "6.0.0",
  "type": "module",
  "main": "out/main/index.js",
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tailwindcss/typography": "^0.5.19",
    "@vitejs/plugin-react": "^5.1.4",
    "alertify.js": "^1.0.12",
    "async": "^3.2.6",
    "autoprefixer": "^10.4.24",
    "chart.js": "^4.5.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.3.9",
    "electron-vite": "^5.0.0",
    "emojify.js": "^1.1.0",
    "fs-extra": "^11.2.0",
    "jquery": "^3.7.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.563.0",
    "moment": "^2.30.1",
    "owasp-password-strength-test": "^1.3.0",
    "postcss": "^8.5.6",
    "react": "^19.2.4",
    "react-chartjs-2": "^5.3.1",
    "react-day-picker": "^9.13.2",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "rimraf": "^6.0.1",
    "showdown": "^2.1.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "targz": "^1.0.1",
    "typescript": "^5.9.3",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "electron": "^40.0.0",
    "electron-builder": "^26.5.0",
    "tailwindcss": "3.4.17"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron app/index.js",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist-mac": "npm run build && electron-builder -m --arm64",
    "dist-linux": "npm run build && electron-builder -l",
    "dist-win": "npm run build && electron-builder -w --x64",
    "ship": "npm run build && electron-builder -p always"
  }
}
