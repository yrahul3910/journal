{
  "name": "JournalBear",
  "repository": "https://github.com/yrahul3910/journal",
  "description": "Easy-to-use journaling application",
  "author": {
    "name": "Rahul Yedida",
    "email": "yrahul3910@gmail.com"
  },
  "build": {
    "appId": "com.yrahul.journal",
    "linux": {
      "target": [
        "rpm"
      ],
      "icon": "./build/icons",
      "category": "Office"
    },
    "mac": {
      "target": "dir",
      "icon": "./build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "./build/icon.ico"
    }
  },
  "version": "6.0.0",
  "type": "module",
  "main": "app/index.js",
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "alertify.js": "^1.0.12",
    "async": "^3.2.6",
    "chart.js": "^4.4.7",
    "d3": "^7.9.0",
    "electron-updater": "^6.3.9",
    "emojify.js": "^1.1.0",
    "fs-extra": "^11.2.0",
    "jquery": "^3.7.1",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "owasp-password-strength-test": "^1.3.0",
    "rimraf": "^6.0.1",
    "showdown": "^2.1.0",
    "targz": "^1.0.1"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.5.0"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron app/index.js",
    "pack": "build --dir",
    "dist": "electron-builder --x64",
    "dist-mac": "electron-builder --x64 -m",
    "ship": "build -p always"
  }
}
